<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>wheel-root</artifactId>
        <groupId>org.wheel</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>
    <description>提供对外继承</description>
    <artifactId>wheel-a-parent</artifactId>

    <dependencies>
        <!--========================wheel||spring.starter end========================-->
        <!--认证和鉴权模块-->
        <dependency>
            <groupId>org.wheel</groupId>
            <artifactId>wheel-client-auth-spring-boot-starter</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wheel</groupId>
            <artifactId>wheel-client-common-spring-boot-starter</artifactId>
        </dependency>
        <!--数据源管理模块-->
        <dependency>
            <groupId>org.wheel</groupId>
            <artifactId>datasource-spring-boot-starter</artifactId>
        </dependency>
        <!--config模块-->
        <dependency>
            <groupId>org.wheel</groupId>
            <artifactId>wheel-client-config-spring-boot-starter</artifactId>
        </dependency>
        <!--========================wheel||spring.starter end========================-->
        <!--========================roses||spring.starter start========================-->
        <!--系统管理基础业务-->
        <dependency>
            <groupId>cn.stylefeng.roses</groupId>
            <artifactId>system-spring-boot-starter</artifactId>
        </dependency>
        <!--默认增加内存缓存-->
        <dependency>
            <groupId>cn.stylefeng.roses</groupId>
            <artifactId>cache-spring-boot-starter-memory</artifactId>
        </dependency>
        <!--========================roses||spring.starter end========================-->
        <!--mysql-->
        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
        </dependency>
    </dependencies>
    <build>
        <!--配置Maven 对resource文件 过滤 -->
        <resources>
            <resource>
                <!--不对src/main/webapp不进行占位符替换的处理-->
                <directory>src/main/webapp</directory>
                <filtering>false</filtering>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <!--表示对这些资源文件进行占位符替换的处理-->
                <filtering>true</filtering>
                <!--排除src/main/resources下所有文件-->
                <excludes>
                    <exclude>**/*.*</exclude>
                </excludes>
            </resource>
            <!-- 不同环境只拷贝不同的 application-${spring.active}.yml 文件-->
            <resource>
                <directory>src/main/resources</directory>
                <!--定义了要包含的资源文件的模式-->
                <includes>
                    <include>**/*.sql</include>
                    <include>**/*.xml</include>
                    <include>bootstrap.yml</include>
                    <include>application.yml</include>
                    <include>application-${spring.active}.yml</include>
                    <include>logback-spring.xml</include>
                    <include>license.dat</include>
                    <include>license/**</include>
                    <include>template/**</include>
                </includes>
                <!--表示对这些资源文件进行占位符替换的处理-->
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>local</id>
            <properties>
                <spring.active>local</spring.active>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>dev</id>
            <properties>
                <spring.active>dev</spring.active>
            </properties>
        </profile>
        <profile>
            <id>test</id>
            <properties>
                <spring.active>test</spring.active>
            </properties>
        </profile>
        <profile>
            <id>prod</id>
            <properties>
                <spring.active>prod</spring.active>
            </properties>
        </profile>
    </profiles>
</project>